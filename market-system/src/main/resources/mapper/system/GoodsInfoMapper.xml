            </if>
            <if test="goodsPreferential != null">
                goods_preferential = #{goodsPreferential},
            </if>
            <if test="manufacturingDate != null">
                manufacturing_date = #{manufacturingDate},
            </if>
            <if test="saveDate != null and saveDate != ''">
                save_date = #{saveDate},
            </if>
            <if test="meteringWay != null">
                metering_way = #{meteringWay},
            </if>
            <if test="status != null">
