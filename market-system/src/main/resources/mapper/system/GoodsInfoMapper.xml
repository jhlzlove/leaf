            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTGoodsInfoById" parameterType="Long">
        delete
        from t_goods_info
        where id = #{id}
    </delete>

    <delete id="deleteTGoodsInfoByIds" parameterType="String">
        delete from t_goods_info where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>